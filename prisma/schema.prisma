generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id        BigInt   @id @default(autoincrement())
  email     String   @unique
  name      String?
  posts     Post[]
  createdAt DateTime
  updatedAt DateTime

  @@map("users")
}

model Post {
  id          BigInt   @id @default(autoincrement())
  title       String
  slug        String   @unique
  content     String?  @db.Text
  user        User     @relation(fields: [userId], references: [id])
  userId      BigInt
  publishedAt DateTime
  createdAt   DateTime
  updatedAt   DateTime

  @@map("posts")
}
