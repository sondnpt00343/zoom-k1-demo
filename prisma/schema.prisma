generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id              BigInt    @id @default(autoincrement())
  username        String?   @unique
  email           String    @unique
  password        String
  firstName       String?
  lastName        String?
  avatar          String?
  bio             String?
  websiteUrl      String?
  githubUrl       String?
  isVerified      Boolean   @default(false)
  emailVerifiedAt DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now())

  posts         Post[]
  comments      Comment[]
  refreshTokens RefreshToken[]

  @@map("users")
}

model Post {
  id          BigInt    @id @default(autoincrement())
  userId      BigInt
  title       String
  description String    @db.Text
  slug        String    @unique
  image       String
  content     String    @db.Text
  minRead     Int?
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("posts")
}

model Comment {
  id        BigInt   @id @default(autoincrement())
  userId    BigInt
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("comments")
}

model RefreshToken {
  id        BigInt   @id @default(autoincrement())
  token     String   @unique
  userId    BigInt
  userAgent String
  isRevoked Boolean? @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("refresh_tokens")
}
